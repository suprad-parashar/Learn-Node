<body class="animsition">
<div class="page-wrapper">
  <!-- Include Dashboard Side Navigation Bar -->
  <%- include("../partials/dashboard_side_nav.ejs") %>

  <div class="page-container">
    <!-- Include Dashboard Header -->
    <%- include("../partials/dashboard_header.ejs") %>

    <div class="main-content">
      <div class="section__content section__content--p30">
        <div class="container-fluid">
          <div class="col-lg-12">
            <div class="au-card">
              <div class="card-body card-block">
                <form method="post" action="javascript:saveProfile()">
                  <div class="account2">
                    <div class="image img-cir img-200" id="profile-image-div">
                      <input type="file" id="imageInput" name="imageInput" style="display: none;">
                      <img class="profilePicImages" id="profileImage"
                           name="profileImageName" />
                      <input id="profile_image_upload" type="file" name="profile_image_upload"
                             placeholder="Photo" style="display: none;" capture>
                    </div>
                    <p onclick='$("#profile_image_upload").click();'>Change Photo</p>
                  </div>
                  <div class="form-group">
                    <label for="name" class=" form-control-label">Name</label>
                    <input type="text" id="name" placeholder="Full Name" class="form-control" name="name" required>
                  </div>
                  <div class="form-group">
                    <label for="institution" class=" form-control-label">Institution</label>
                    <input type="text" name="institution" id="institution" placeholder="School/College/University" class="form-control">
                  </div>
                  <input class="au-btn au-btn-icon au-btn--blue" type="submit" value="Save" style="border: 2px solid #8C54A1; margin: 5px;">
                  <a href="/profile"><input class="au-btn au-btn-icon au-btn--blue" type="button" value="Cancel" style="margin: 5px; background-color: white; border: 2px solid #8C54A1;color: #8C54A1" href="/profile"></a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

