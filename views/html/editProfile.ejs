<body class="animsition">
<div class="page-wrapper">
    <!-- Include Dashboard Side Navigation Bar -->
    <%- include("../partials/dashboard_side_nav.ejs") %>

    <div class="page-container">
        <!-- Include Dashboard Header -->
        <%- include("../partials/dashboard_header.ejs") %>

        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="col-lg-12">
                        <div class="au-card">
                            <div class="account2">
                                <div class="image img-cir img-200">
                                    <img src="<%= profilePic %>" alt="<%= name %>"/>
                                </div>
                            </div>
                            <div class="card-body card-block">
                                <form method="post" action="/profile/edit">
                                    <div class="form-group">
                                        <label for="name" class=" form-control-label">Name</label>
                                        <input type="text" id="name" placeholder="Full Name" value="<%= name %>"
                                               class="form-control" name="name" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="institution" class=" form-control-label">Institution</label>
                                        <input type="text" name="institution" id="institution"
                                               placeholder="School/College/University" value="<%= institution %>"
                                               class="form-control">
                                    </div>
                                    <input class="au-btn au-btn-icon au-btn--blue" type="submit" value="Save">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

